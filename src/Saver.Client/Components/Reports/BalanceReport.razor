@using Saver.FinanceService.Contracts.Reports
<div class="bg-light rounded-2 m-0 p-3 flex-fill">
    <label class="mb-2">BALANCE</label>
    @if (BalanceReportDto is null)
    {
        <p>Loading...</p>
    }
    else
    {
        <p class="h3">@BalanceReportDto.Balance</p>
    
        <div class="d-flex align-items-stretch">
            <div class="me-3">
                <label>Last 7 days</label>
                <ValueDifferenceIndicator Value="@BalanceReportDto.ChangeInLast7Days" CurrencyCode="@CurrencyCode"/>
            </div>
            <div>
                <label>Last 30 days</label>
                <ValueDifferenceIndicator Value="@BalanceReportDto.ChangeInLast30Days" CurrencyCode="@CurrencyCode"/>
            </div>
        </div>
    }

</div>

@code {
    [Parameter, EditorRequired] public string CurrencyCode { get; set; } = string.Empty;
    [Parameter, EditorRequired] public BalanceReportDto? BalanceReportDto { get; set; }
}
