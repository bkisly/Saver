@page "/accounts"

<PageTitle>Accounts</PageTitle>

<h1 class="h3">Manage and create your bank accounts here.</h1>

<button type="button" class="btn btn-secondary rounded-3 my-3" data-bs-toggle="modal" data-bs-target="#account-form">
    <span>
        <i class="bi-plus-lg"></i>
    </span>
    <span>New bank account</span>
</button>

<div class="row p-2 my-2 bg-light rounded-3">
    <div class="col-auto my-auto">
        <i class="bi-bank fs-3"></i>
    </div>
    <div class="col my-auto">
        <p class="fs-5 fw-medium m-0">Some account</p>
        <span class="my-1">Balance: 250,000.00 USD</span>
    </div>
    <div class="col-auto my-auto justify-content-end text-end">
        <a class="my-auto mx-2 text-black" href="#">
            <i class="fs-5 bi-star"></i>
        </a>
        <button type="button" class="border-0 bg-transparent my-auto text-black" data-bs-toggle="modal" data-bs-target="#account-form">
            <i class="fs-5 bi-pen"></i>
        </button>
        <button type="button" class="border-0 bg-transparent my-auto text-black" data-bs-toggle="modal" data-bs-target="#delete-modal">
            <i class="fs-5 bi-trash"></i>
        </button>
    </div>
</div>
<div class="row p-2 my-2 bg-light rounded-3">
    <div class="col-auto my-auto">
        <i class="bi-bank fs-3"></i>
    </div>
    <div class="col my-auto">
        <p class="fs-5 fw-medium m-0">Another account</p>
        <span class="my-1">Balance: 250,000.00 USD</span>
    </div>
    <div class="col my-auto justify-content-end text-end">
        <a class="my-auto mx-2 text-black" href="#">
            <i class="fs-5 bi-star"></i>
        </a>
        <button type="button" class="border-0 bg-transparent my-auto text-black" data-bs-toggle="modal" data-bs-target="#account-form">
            <i class="fs-5 bi-pen"></i>
        </button>
        <button type="button" class="border-0 bg-transparent my-auto text-black" data-bs-toggle="modal" data-bs-target="#delete-modal">
            <i class="fs-5 bi-trash"></i>
        </button>
    </div>
</div>

<!-- Modal form -->
<div class="modal fade" id="account-form" tabindex="-1" aria-labelledby="account-form-title" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="account-form-title">New bank account</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="account-name" class="form-label">Name</label>
                    <input maxlength="256" class="form-control" id="account-name" placeholder="Your bank account name"/>
                </div>
                <div class="mb-3">
                    <label for="account-initial-balance" class="form-label">Initial balance</label>
                    <input type="number" step="0.01" id="account-initial-balance" class="form-control" value="0.00"/>
                </div>
                <div class="mb-3">
                    <label for="account-currency" class="form-label">Currency</label>
                    <select id="account-currency" class="form-select">
                        <option selected>USD</option>
                        <option>EUR</option>
                        <option>PLN</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary rounded-3" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success rounded-3">Create account</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete confirmation modal -->
<div class="modal fade" id="delete-modal" tabindex="-1" aria-labelledby="delete-confirmation-title" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="delete-confirmation-title">Delete confirmation</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>
                    <span>Are you sure you want to delete this account? This will delete all data related to this account.</span>
                    <strong>This operation is irreversible.</strong>
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary rounded-3" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger rounded-3">I understand, delete.</button>
            </div>
        </div>
    </div>
</div>

