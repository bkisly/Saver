@page "/transactions"
@using Saver.FinanceService.Contracts.BankAccounts
@using Saver.FinanceService.Contracts.Transactions

@inject IBankAccountsApiClient BankAccountsApiClient
@inject ITransactionsApiClient TransactionsApiClient

@attribute [Authorize]

<PageTitle>Transactions</PageTitle>

<h3>Here you can register all of your benefits and expenses.</h3>

@if (_availableAccounts.Count > 0)
{
    <div class="d-flex my-3">
        <button type="button" class="btn btn-secondary rounded-3 me-2" data-bs-toggle="modal" data-bs-target="#transaction-form">
            <span>
                <i class="bi-plus-lg"></i>
            </span>
            <span>New transaction</span>
        </button>
        <a class="btn btn-light rounded-3" href="#">
            <span>
                <i class="bi-tags-fill"></i>
            </span>
            <span>Manage categories</span>
        </a>
    </div>

    <InputSelect class="form-select" @bind-Value="SelectedBankAccountId">
        @foreach (var account in _availableAccounts.OrderByDescending(x => x.IsDefault))
        {
            <option value="@account.Id">@account.Name</option>
        }
    </InputSelect>

    <div class="mt-3">
        @foreach (var transaction in _transactionsForSelectedAccount)
        {

        }
    </div>

    <!-- Modal form -->
    <div class="modal fade" id="transaction-form" tabindex="-1" aria-labelledby="transaction-form-title" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="transaction-form-title">New bank account</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="account-name" class="form-label">Name</label>
                        <input maxlength="256" class="form-control" id="account-name" placeholder="Your bank account name" />
                    </div>
                    <div class="mb-3">
                        <label for="account-initial-balance" class="form-label">Initial balance</label>
                        <input type="number" step="0.01" id="account-initial-balance" class="form-control" value="0.00" />
                    </div>
                    <div class="mb-3">
                        <label for="account-currency" class="form-label">Currency</label>
                        <select id="account-currency" class="form-select">
                            <option selected>USD</option>
                            <option>EUR</option>
                            <option>PLN</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary rounded-3" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-success rounded-3">Create account</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete confirmation modal -->
    <div class="modal fade" id="delete-modal" tabindex="-1" aria-labelledby="delete-confirmation-title" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="delete-confirmation-title">Delete confirmation</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>
                        <span>Are you sure you want to delete this account? This will delete all data related to this account.</span>
                        <strong>This operation is irreversible.</strong>
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary rounded-3" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger rounded-3">I understand, delete.</button>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p>No accounts available.</p>
}

@code {
    private Guid SelectedBankAccountId { get; set; }
    private List<BankAccountDto> _availableAccounts = [];
    private List<TransactionDto> _transactionsForSelectedAccount = [];

    protected override async Task OnInitializedAsync()
    {
        _availableAccounts = (await BankAccountsApiClient.GetBankAccountsAsync()).Content?.ToList() ?? [];
    }

    private async Task OnSelectedAccountChanged()
    {
        _transactionsForSelectedAccount = (await TransactionsApiClient.GetTransactionsForAccountAsync(SelectedBankAccountId)).Content?.ToList() ?? [];
    }
}
