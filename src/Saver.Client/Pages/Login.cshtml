@page "/login"
@model Saver.Client.Pages.LoginModel

@{
    Layout = "_Layout";
}

<h1 class="h3 text-center mt-5">Log in</h1>

<div class="container-sm justify-content-center" style="max-width: 500px">
    <form method="post" class="mt-3 bg-light rounded-3 p-3">
        <div class="mt-2">
            <label asp-for="LoginViewModel.Email">E-mail</label>
            <input asp-for="LoginViewModel.Email" class="form-control"/>
            <span class="text-danger" asp-validation-for="LoginViewModel.Email"></span>
        </div>
        <div class="mt-2">
            <label asp-for="LoginViewModel">Password</label>
            <input asp-for="LoginViewModel.Password" type="password" class="form-control"/>
            <span class="text-danger" asp-validation-for="LoginViewModel.Password"></span>
        </div>
        <div class="mt-3">
            <span class="text-danger" asp-validation-for="LoginViewModel"></span>
            <button type="submit" class="btn btn-lg btn-success rounded-3 w-100 mt-2">Log in</button>
        </div>
    </form>
</div>
